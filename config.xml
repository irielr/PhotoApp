<widget id="com.iriel.photoapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>PhotoApp</name>
    <description>Uso de la cámara y los filtros de imágenes</description>
    <author email="irielr74@gmail.com" href="http://phonegap.com">Iriel</author>
    <content src="index.html" />
    
	<engine name="android" spec="https://github.com/apache/cordova-android.git#6.3.0" />

        <preference name="android-minSdkVersion" value="19" />
	<preference name="android-targetSdkVersion" value="28" />
	<preference name='phonegap-version' value='cli-9.0.0' />
	<!--<preference name='phonegap-version' value='cli-8.1.1' />-->
	<preference name='pgb-builder-version' value='1' />
	
	<preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
	
    
	<plugin name="cordova-plugin-camera" source="npm" spec="4.1.0" />
	<plugin name="cordova-plugin-console" source="npm" spec="1.0.7" />
	<plugin name="cordova-plugin-device" source="npm" spec="2.0.3" />
	<plugin name="cordova-plugin-battery-status" source="npm" spec="1.1.2" />
	
